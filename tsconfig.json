{
  "compilerOptions": {
    "target": "es6",
    "module": "amd",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "baseUrl": "src/app",
    "paths": { "*": ["*", "node_modules/"] },
    "outFile": "tmp/index.js"
  },
  "include": [ "src/app/**/*" ],
  "exclude": [ "node_modules" ]
}
